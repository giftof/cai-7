    "version": "0.2.0",
    "configurations": [
        {
        "name": "Python: Flask App (via flask run, venv)",
        "type": "debugpy",
        "request": "launch",
        "module": "flask",
        "env": {
            "FLASK_APP": "david/app.py",
            "FLASK_ENV": "development"
        },
        "args": [
            "run",
            "--host=0.0.0.0",
            "--port=8080"
        ],
        "console": "integratedTerminal",
        "justMyCode": true
        }
    ]
}
